{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "88Pay Documentation",
  "colors": {
    "primary": "#171D4A",
    "light": "#2563EB",
    "dark": "#1E3A8A"
  },
  "favicon": {
    "light": "/logo/logo-dark.png",
    "dark": "/logo/logo-light.png"
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "icon": "book-open-cover",
          "color": {
            "light": "#08083a",
            "dark": "#08083a"
          },
          "href": "https://dash.88pay.io/"
        },
        {
          "anchor": "Blog",
          "icon": "newspaper",
          "hidden": true,
          "href": "https://mintlify.com/blog"
        }
      ]
    },
    "versions": [
      {
        "version": "1.0",
        "languages": [
          {
            "language": "es"
          },
          {
            "language": "en"
          },
          {
            "language": "ru"
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/logo-dark.png",
    "dark": "/logo/logo-light.png",
    "href": "https://88pay.mintlify.app/"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@88pay.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/88paytech",
      "github": "https://github.com/88paytech",
      "linkedin": "https://linkedin.com/company/88pay"
    }
  },
  "appearance": {
    "default": "system"
  },
  "background": {
    "decoration": "windows"
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  }
}
